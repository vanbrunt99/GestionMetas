@model GestionMetas.Models.Tarea

@{
    ViewData["Title"] = "Eliminar tarea";
}

<h1>Eliminar tarea</h1>

<h3>¿Seguro que deseas eliminar esta tarea?</h3>

<div>
    <h4>@Model.Descripcion</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Meta</dt>
        <dd class="col-sm-10">@Model.Meta?.Titulo</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>

        <dt class="col-sm-2">Dificultad</dt>
        <dd class="col-sm-10">@Model.Dificultad</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

