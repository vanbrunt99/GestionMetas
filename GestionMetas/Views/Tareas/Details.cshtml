@model GestionMetas.Models.Tarea

@{
    ViewData["Title"] = "Detalles de la tarea";
}

<h1>Detalles de la tarea</h1>

<div>
    <h4>@Model.Descripcion</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Meta</dt>
        <dd class="col-sm-10">@Model.Meta?.Titulo</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>

        <dt class="col-sm-2">Dificultad</dt>
        <dd class="col-sm-10">@Model.Dificultad</dd>

        <dt class="col-sm-2">Fecha límite</dt>
        <dd class="col-sm-10">@Model.FechaLimite?.ToShortDateString()</dd>

        <dt class="col-sm-2">Tiempo estimado (h)</dt>
        <dd class="col-sm-10">@Model.TiempoEstimado</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>

